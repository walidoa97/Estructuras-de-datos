//archivo.h
#pragma once
class area
{
private:
	float v,a;
public:
	area(void);
	~area(void);
	float calcular_areatriangulo(float v,float a);
};

//archivo.cpp
#include "StdAfx.h"
#include "area.h"

area::area(void)
{
}

area::~area(void)
{
}

float area::calcular_areatriangulo(float b,float h)
{
	float x;
	x=(v*a)/2;
	return x;
}
//ejemplo
// triangulo.cpp : Defines the entry point for the console application.
//

#include <conio.h>
