using namespace std;

void main()
{ area area1;
	int c,g;
	cout<<"Ingrese la base: ";
	cin>>c;
	cout<<"Ingrese la altura: ";
	cin>>g;
	cout<<"El area del triangulo es: "<< area1.calcular_areatriangulo(c,g)<<endl;
